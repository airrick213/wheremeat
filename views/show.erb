<div class="top-container">
  <!-- Header -->
  <header id="top" class="header">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <h1 id="title"><%= @location.denormalized_map_name %></h1>
      </div>
    </div>
  </header>

  <input id="end" type="hidden" value="(<%= @location.latitude %>, <%= @location.longitude %>)">

  <div id="map-container" class="row">
    <div id="map-loading"><h3>MAP/DIRECTIONS ARE LOADING</h3></div>
    <div id="map-canvas" class="col-xs-12 col-sm-6"></div>
    <div id="directions" class="col-xs-12 col-sm-6"></div>
  </div>

  <script type="text/javascript" src="javascripts/directions.js"></script>
</div>

<%= erb :_about, layout: false %>

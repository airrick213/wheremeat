<script type="text/javascript" src="javascripts/map.js"></script>

<div class="top-container">

  <!-- Header -->
  <header id="top" class="header">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <a href="/"><h1 id="title">Where Me At?</h1></a>
        <div id="success"><h3><%= @success %></h3></div>
        <div id="error"><h3><%= @error %></h3></div>
      </div>
    </div>
  </header>

  <div class="container">
    <div id="map-container">
      <div id="map-loading"><h3>MAP IS LOADING</h3></div>
      <div id="map-canvas"></div>
    </div>

    <form id="new-map" action="/" method="POST" role="form">

      <div class="form-group row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <input id="location_map_name" type="text" name="location[map_name]" placeholder="Map Name" class="form-control">
        </div>
      </div>

      <div class="form-group row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <label for="address">Share your map:</label>
          <textarea id="addresses" name="addresses" class="form-control" rows="5" placeholder="Phone numbers and/or email addresses"></textarea>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <button id="new-map-submit" type="submit" class="btn btn-primary btn-lg" disabled="true">Create</button>
        </div>
      </div>
    </div>
  </form>

    <!-- <form id="existing-map" action="/show" method="POST">

      <div class="row">
        <div class="form-group col-sm-4">
          <label for="existing-map">Go to an Existing Map: </label>
          <input id="existing-map" type="text" name="location[map_name]" placeholder="Map Name" class="form-control">
        </div>
      </div>

      <button type="submit" class="btn btn-default">Search</button>
    </form> -->
  </div>
</div>

<section id="about" class="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Where Me At is an easy way for you to share your location with friends.</h2>
        <p class="lead">Created at <a target="_blank" href="http://flatironschool.com/" class="blue">The Flatiron School</a> by <a target="_blank" href="https://github.com/pcrglennon" class="blue">Peter Glennon</a> <a target="_blank" href="https://twitter.com/pcrglennon" class="blue">(@pcrglennon)</a> and <a target="_blank" href="https://github.com/jusjmkim" class="blue">Justin Kim</a> <a href="https://twitter.com/jusjmkim" class="blue">(@jusjmkim)</a>.</p>
      </div>
    </div><!-- /.row -->
  </div><!-- /.container -->
</section>
